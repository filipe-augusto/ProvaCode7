
<style>
    .alertaFilipe {
        z-index: 9999;
        position: fixed !important;
        width: 80%;
        margin-left: 10px;
        margin-right: 10px;
        height: 40px;
        border: 10px white;
    }
</style>

@if (Exibir)
{
    <div class="row alertaFilipe">
        <div class="col-3">

        </div>
        <div class="col-6">
            <div class="alert alert-@TipoMensagem  m-5" role="alert">
                @Texto
            </div>

        </div>
        <div class="col-3">
        </div>
    </div>

}

@code {

    [Parameter]
    public string TipoMensagem { get; set; } = "primary";
    [Parameter]
    public string Texto { get; set; } = "Atenção";

    [Parameter]
    public bool Exibir { get; set; } = false;


    //secondary  success danger warning info

}
